Bootstrap: docker

From: continuumio/miniconda3:latest

%post
    project_name='ppdev'

    # Install software.
    apt-get update
    apt-get install -y curl
    apt-get install -y rsync
    curl -fsSL https://pixi.sh/install.sh | bash

    # Install LaTeX.
    apt-get install -y dvipng
    apt-get install -y texlive-latex-extra
    apt-get install -y texlive-fonts-recommended
    apt-get install -y cm-super

    # Restart the shell.
    . ~/.profile
    . ~/.bashrc

    # Install the project and its dependencies.
    rsync -r "/mnt/${project_name}" .
    cd "$project_name"
    pixi install -e cuda

    # Activate the environment upon running the container.
    echo "$(pixi shell-hook -e cuda)" >> $SINGULARITY_ENVIRONMENT

%environment
    project_name='ppdev'

    if [ -d "/mnt/${project_name}" ]
    then
        export PYTHONPATH="/mnt/${project_name}:${PYTHONPATH}"
    fi
